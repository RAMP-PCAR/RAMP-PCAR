---
{
	"altLangPrefix": "ramp",
	"dateModified": "2014-09-22",
	"sitesearch": "false"
}
---
<section class="height-100 viewport">
	<!--<h2 id="ramp-title" class="wb-invisible">
        @@page.header.titleLink
    </h2>-->
	
    <section id="map-div" class="height-100 background-light margin-bottom-none">
        <!--<div class="margin-bottom-medium margin-top-medium margin-right-medium text-right">-->
        <ul id="map-toolbar" class="text-right">
            <li id="basemapControls" class="pull-left map-toolbar-item" style="display: inline;">
                <button class="btn btn-xs map-toolbar-item-button button-none" id="baseMapToggle">
                    <span>Topographic</span><span class="separator"></span>
                </button>
                <div id="basemapGallery">
                </div>
            </li>
            <li class="map-toolbar-item">
                <button class="btn btn-xs map-toolbar-item-button button-none" id="getlink-toggle">
                    <i class="fa fa-link"></i><span class="on-right">{{t "bookmarkLink.title"}}</span>
                </button>
                <div id="getlink-section-container" class="map-toolbar-item-container">
                    <div id="getlink-section" class="map-toolbar-item-section text-left background-white box-shadow-section">
                        <section>
                            <h2 class="margin-top-none ">
                                {{t "bookmarkLink.title"}}
                            </h2>
                            <button class="button-none button-close _tooltip" title="{{t "gui.actions.close"}}">
                                <span class="wb-invisible">{{t "gui.actions.close"}}</span>
                            </button>
                            <label class="argin-bottom-small margin-top-small wb-invisible" for="getlink-input">
                                {{t "bookmarkLink.description"}}
                            </label>
                            <p class="margin-bottom-small margin-top-none getlink-input-holder">
                                <button class="button button-none button-small getlink-shorten-button">
                                    {{t "bookmarkLink.shortLink"}}
                                </button>
                                <input type="text" data-role="none" id="getlink-input" class="margin-bottom-none width-100">
                            </p>
                            <div class="get-link-loading-div">
                                <ul class="loadingAnimation" style="display: none;">
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                    <li></li>
                                </ul>
                            </div>
                            <p class="margin-top-medium margin-bottom-small">
                                <a href="mailto:" class="button button-info pull-right getlink-email-button">
                                    <span class="wb-icon-mail"></span>@@bookmarkLink.email
                                </a> <span class="clear"></span>
                            </p>
                            <div class="clear">
                            </div>
                        </section>
                    </div>
                </div>
            </li>
            <li class="map-toolbar-item">
                <button class="btn btn-xs map-toolbar-item-button button-none" id="advanced-toggle">
                    <i class="fa fa-cog"></i><span class="on-right">{{t "advancedToolbar.advancedTitle"}}</span>
                </button>
                <div id="advanced-toolbar">
                    
                </div>
            </li>
            <li class="map-toolbar-item">
                <button class="btn btn-xs map-toolbar-item-button button-none" id="fullScreenToggle">
                    <i class="fa fa-arrows-alt"></i><span class="on-right">{{t "gui.actions.fullScreen"}}</span>
                </button>
            </li>
            <li class="map-toolbar-item">
                <button class="btn btn-xs map-toolbar-item-button button-none" id="helpToggle">
                    <i class="fa fa-question"></i><span class="on-right">{{t "help.title"}}</span>
                </button>
                <div id="help-section-container" class="map-toolbar-item-container">
                    <div id="help-section-shadow" class="background-white">
                        <div id="help-section" class="text-left">

                            <section>
                                <h2 class="margin-top-small">
                                    {{t "help.sectionsTitle"}}
                                </h2>
                                <button class="button-none button-close _tooltip" title="{{t "gui.actions.close"}}">
                                    <span class="wb-invisible">{{t "gui.actions.close"}}</span>
                                </button>
								<div>
									{{>help}}
								</div>
                            </section>
                        </div>                                            
                    </div>
                </div>
            </li>
        </ul>
        <div id="mapContent" class="yui3-skin-wmat_blue _height-100">
            <div id="mainMap" class="height-100 width-100 map">
                <div id="mapControl">
                    <div id="map-navigation">
                    </div>
                </div>
                <div id="map-load-indicator" class="small">
                    <span>{{t "map.loadingTitle"}}</span><ul>
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
            </div>
        </div>
        <button id="panel-toggle" class="button-none side-toggle state-expanded _tooltip" title="{{t "gui.actions.close"}}">
            <span class="wb-invisible">@@gui.actions.close</span>
        </button>
    </section>
    <section id="panel-div" class="height-100 background-white tundra small">
        <div class="wb-tabs">
            <div class="tabpanels width-100">
                <details id="tabs1_1">
					<summary class="background-light" data-panel-name="filterManager">{{t "filterManager.datasetsTabTitle"}}</summary>
                    <!-- SEARCH MAP BEGIN -->
                    <div id="searchMapSection">
                        <!--<h2 id="searchMapHeader">
                        </h2>-->
                        <div id="searchMapSectionBody">
                            <!--LAYER SELECTION BEGINS-->
                            <ul class="loadingAnimation">
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                                <li></li>
                            </ul>
                            <!--LAYER SECTION END-->
                        </div>
                    </div>
                    <!-- SEARCH MAP END -->
                </details>
                <details id="tabs1_2">
					<summary class="background-light" data-panel-name="datagrid">{{t "datagrid.dataTabTitle"}}</summary>
                    <div id="gridpane">
                        <ul class="loadingAnimation">
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                        </ul>
                    </div>
                </details>
            </div>
        </div>
    </section>
    <!--<dl id="gcwu-date-mod" role="contentinfo">
        <dt>Date modified:</dt><dd><span><time>2013-06-25</time></span></dd>
    </dl>-->
    <div class="clear">
    </div>
</section>
