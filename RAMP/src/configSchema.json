{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://jsonschema.net#",
    "type": "object",
    "title": "root",
    "description": "RAMP Configuration",

    "properties": {

        "featureLayers": {
            "id": "#featureLayers",
            "type": "array",            
            "title": "Feature Layers",
            "description": "Specifies Feature Layers displayed on the map",
            "minItems": 0,

            "items": {
                "id": "#featureLayer",
                "type": "object",

                "properties": {

                    "settings": {
                        "id": "#settings",
                        "type": "object",
                        "description": "Specifies settings for the Feature Layer",

                        "properties": {
                            "enabled": {
                                "id": "#enabled",
                                "type": "boolean",
                                "description": "Indicates whether the Settings panel is accessible to the users",
                                "default": true
                            },

                            "opacity": {
                                "id": "#opacity",
                                "type": "object",
                                "description": "Specifies the opacity setting for the Feature Layer",

                                "properties": {
                                    "enabled": {
                                        "id": "#enabled",
                                        "type": "boolean",
                                        "description": "Indicates whether the Opacity control is accessible to the users",
                                        "default": true
                                    },
                                    "default": {
                                        "id": "#default",
                                        "type": "number",
                                        "description": "Specifies the default opacity level of the Feature Layer",
                                        "minimum": 0,
                                        "maximum": 1,
                                        "default": 1
                                    }
                                },
                                "required": [
                                    "enabled",
                                    "default"
                                ]
                            }
                        },
                        "required": [
                            "enabled",
                            "opacity"
                        ]
                    }
                },

                "required": [
                    "settings"
                ]
            },
            "required": [                
            ]
        },

        "advancedToolbar": {
            "id": "#advancedToolbar",
            "type": "object",
            "title": "Advanced Toolbar",
            "description": "Specifies tools available for Advanced Toolbar",

            "properties": {

                "enabled": {
                    "id": "#enabled",
                    "type": "boolean",
                    "description": "Specifies if Advanced Toolbar is active",
                    "default": false
                },

                "tools": {
                    "id": "#tools",
                    "type": "array",
                    "title": "Tools",
                    "description": "",
                    "minItems": 1,

                    "items": {
                        "id": "#tool",
                        "type": "object",

                        "properties": {
                            "name": {
                                "id": "#name",
                                "type": "string",
                                "description": "Name of the tool"
                            },

                            "selector": {
                                "id": "#selector",
                                "type": "string",
                                "description": "CSS selector for the tool's activator"
                            },

                            "enabled": {
                                "id": "#enabled",
                                "type": "boolean",
                                "description": "Specifies if the tool is active",
                                "default": true
                            }
                        },

                        "required": [
                            "name",
                            "selector",
                            "enabled"
                        ]
                    },

                    "required": [
                        "0"
                    ]
                }
            },
            "required": [
                "enabled"
            ]
        }


    },
    "required": [
        "featureLayers",
        "advancedToolbar"
    ]
}
