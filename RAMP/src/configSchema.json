{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://jsonschema.net#",
  "type": "object",
  "title": "root",
  "description": "RAMP Configuration",
  
  "properties": {
    
      "advancedToolbar": {
      "id": "#advancedToolbar",
      "type": "object",
      "title": "Advanced Toolbar",
      "description": "Specifies tools available for Advanced Toolbar",
      
      "properties": {
        
          "enabled": {
          "id": "#enabled",
          "type": "boolean",
          "description": "Specifies if Advanced Toolbar is active",
          "default": false
        },

        "tools": {
          "id": "#tools",
          "type": "array",
          "title": "Tools",
          "description": "",          
          "minItems": 1,
          
          "items": {
            "id": "#tool",
            "type": "object",

            "properties": {
              "name": {
                "id": "#name",
                "type": "string",
                "description": "Name of the tool"
              },

              "selector": {
                "id": "#selector",
                "type": "string",
                "description": "CSS selector for the tool's activator"
              },

              "enabled": {
                "id": "#enabled",
                "type": "boolean",
                "description": "Specifies if the tool is active",
                "default": true
              }
            },

            "required": [
              "name",
              "selector",
              "enabled"
            ]
          },

          "required": [
            "0"
          ]
        }
      },
      "required": [
        "enabled"
      ]
    }
  },
  "required": [
    "advancedToolbar"
  ]
}