{
    "base_tool_output":  "<div class='area-info'>
                        <div>
                            <p class='info-label margin-bottom-small margin-top-none'>{%= o.areaLabel %}:</p>
                            <span class='area-output working-placeholder'>{%= o.areaOutput %} 
                                {% if (o.areaUnits ) { %}
                                    {%= o.areaUnits %}<sup>2</sup>
                                {% } %}
                            </span>
                        </div>
                        <div>
                            <p class='info-label margin-bottom-small margin-top-none'>{%= o.lengthLabel %}:</p>
                            <span class='length-output working-placeholder'>{%= o.lengthOutput %} 
                                {% if (o.lengthUnits ) { %}
                                    {%= o.lengthUnits %}
                                {% } %}
                            </span> 
                        </div>
                    </div>",

    "base_tool_button": "<li class='map-toolbar-item'>
                        <button class='button map-toolbar-item-button button-none' id='at-area-toggle'>
                            <i class='fa fa-arrows'></i><span class='on-right'>{%= i18n.t('tools/areaTool:toolName') %}</span>
                        </button>
                    </li>"
}
