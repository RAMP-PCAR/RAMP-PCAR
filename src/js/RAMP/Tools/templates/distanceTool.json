                            <p class='info-label mrgn-bttm-sm mrgn-tp-0'>{%= o.lengthLabel %}:</p>
                            <span class='length-output working-placeholder'>{%= o.lengthOutput %} 
                                {% if (o.lengthUnits ) { %}
                                    {%= o.lengthUnits %}
                                {% } %}
                            </span> 
                        </div>",

    "base_tool_button": "<li class='map-toolbar-item'>
                        <button class='btn btn-xs map-toolbar-item-button button-none' id='at-distance-toggle'>
                            <i class='fa fa-arrows-h'></i><span class='on-right'>{%= i18n.t(o.ns + ':toolName') %}</span>
                        </button>
                    </li>"
}
