{
    "default_basemap":	"<a href='javascript:void(0);'>
                            <div class='esriBasemapGalleryLabelContainer'>
                                <span alt='{%= o.data.name %} ({%= o.data.type %})' title='{%= o.data.name %} ({%= o.data.type %})'>{%= o.data.name %} ({%= o.data.type %})</span>
                                <span class='font-xsmall extra'>{%= o.data.description %}</span>
                            </div>
                            <img class='esriBasemapGalleryThumbnail' src='{%= o.data.thumbnail %}' alt='{%= o.data.altText %}'>
                            <div class='clearfix'></div>
                        </a>",
    
    "basemapselector": "
        <div id='basemapselector-section-container'>
            <div class='basemapselector-section'>
                <div class='projection-list-pane'>
                    <ul class='projection-list'>
                        {%              
                            o.forEach(function (pr) {
                                include('projection', pr);
                            });
                        %}
                    </ul>
                </div>
            </div>
        </div>
    ",

    "projection": "
        <li class='projection-list-item'>
            <button class='btn projection-button button-none'>{%= o.name %}</button>
            <div class='basemap-list-pane'>
                <div class='basemap-warning'>
                    <p>Page refresh required</p>
                </div>
                <ul class='basemap-list'>
                    {%              
                        o.maps.forEach(function (bm) {
                            include('basemap', bm);
                        });
                    %}
                </ul>
            </div>
        </li>
    ",

    "basemap": "
        <li class='basemap-list-item'>                
            <button class='btn basemap-button button-none'>
                <div class='basemap-info'>
                    <span class='basemap-name'>{%= o.name %}</span>
                    <span class='basemap-description small'>6378, Topographic</span>
                </div>
                <img class='basemap-image' src='http://lorempixel.com/g/120/60/abstract/' />
            </button>
        </li>
    "
}