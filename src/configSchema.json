{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://jsonschema.net#",
    "type": "object",
    "title": "root",
    "description": "RAMP Configuration",

    "definitions": {
        "wmsNode": { "type": "object" },

        "featureNode": {
            "type": "object",

            "properties": {

                "id": {
                    "type": "string"
                },

                "displayName": { "type": "string" },
                "url": { "type": "string", "format": "uri" },
                "nameField": { "type": "string" },
                "layerAttributes": { "type": "string", "default": "*" },

                "layerExtent": { "type": "object" },
                "templates": { "type": "object" },
                "symbology": { "type": "object" },
                "datagrid": { "type": "object" },


                "settings": {
                    "id": "#settings",
                    "type": "object",
                    "description": "Specifies settings for the Feature Layer",

                    "properties": {
                        "panelEnabled": {
                            "type": "boolean",
                            "description": "Indicates whether the Settings panel is accessible to the users",
                            "default": true
                        },

                        "opacity": {
                            "type": "object",
                            "description": "Specifies the opacity setting for the Feature Layer",

                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "description": "Indicates whether the Opacity control is accessible to the users",
                                    "default": true
                                },
                                "default": {
                                    "id": "#default",
                                    "type": "number",
                                    "description": "Specifies the default opacity level of the Feature Layer",
                                    "minimum": 0,
                                    "maximum": 1,
                                    "default": 1
                                }
                            },
                            "required": [ "enabled", "default" ]
                        }
                    },
                    "required": [ "enabled", "opacity" ]
                }
            },

            "required": [ "id", "displayName", "url", "nameField", "layerExtent", "datagrid", "symbology" ]

        }
    },

    "properties": {

        "layers": {
            "type": "object",
            "properties": {
                "feature": {
                    "type": "array",
                    "default": [ ],
                    "items": { "$ref": "#/definitions/featureNode" }
                },
                "wms": {
                    "type": "array",
                    "default": [ ],
                    "items": { "$ref": "#/definitions/wmsNode" }
                }
            }
        },

        "advancedToolbar": {
            "id": "#advancedToolbar",
            "type": "object",
            "title": "Advanced Toolbar",
            "description": "Specifies tools available for Advanced Toolbar",

            "properties": {

                "enabled": {
                    "id": "#enabled",
                    "type": "boolean",
                    "description": "Specifies if Advanced Toolbar is active",
                    "default": false
                },

                "tools": {
                    "id": "#tools",
                    "type": "array",
                    "title": "Tools",
                    "description": "",
                    "minItems": 1,

                    "items": {
                        "id": "#tool",
                        "type": "object",

                        "properties": {
                            "name": {
                                "id": "#name",
                                "type": "string",
                                "description": "Name of the tool"
                            },

                            "selector": {
                                "id": "#selector",
                                "type": "string",
                                "description": "CSS selector for the tool's activator"
                            },

                            "enabled": {
                                "id": "#enabled",
                                "type": "boolean",
                                "description": "Specifies if the tool is active",
                                "default": true
                            }
                        },

                        "required": [
                            "name",
                            "selector",
                            "enabled"
                        ]
                    },

                    "required": [
                        "0"
                    ]
                }
            },
            "required": [
                "enabled"
            ]
        }


    },
    "required": [ "advancedToolbar" ]
}
