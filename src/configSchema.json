{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://jsonschema.net#",
    "type": "object",
    "title": "root",
    "description": "RAMP Configuration",
    "additionalProperties": false,

    "definitions": {
        "spatialReference": {
            "type": "object",
            "properties": {
                "wkid": { "type": "number" },
                "vcsWkid": { "type": "number" },
                "latestWkid": { "type": "number" },
                "latestVcsWkid": { "type": "number" },
                "wkt": { "type": "string" }
            },
            "anyOf": [
                { "required": [ "wkid" ] },
                { "required": [ "vcsWkid" ] },
                { "required": [ "latestWkid" ] },
                { "required": [ "latestVcsWkid" ] },
                { "required": [ "wkt" ] }
            ],
            "additionalProperties": false
        },

        "gridColumn": { "type": "object", "additionalProperties": true },
        "symbolNode": { "type": "object", "additionalProperties": true },

        "basicNode": {
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "displayName": { "type": "string" },
                "url": { "type": "string", "format": "uri" },

                "layerExtent": {
                    "type": "object",
                    "properties": {
                        "xmin": { "type": "number" },
                        "ymin": { "type": "number" },
                        "xmax": { "type": "number" },
                        "ymax": { "type": "number" },
                        "spatialReference": { "$ref": "#/definitions/spatialReference" }
                    },
                    "required": [ "xmin", "ymin", "xmax", "ymax" ]
                },

                "symbology": { "$ref": "#/definitions/symbolNode" },

                "settings": {
                    "id": "#settings",
                    "type": "object",
                    "description": "Specifies settings for the Feature Layer",

                    "properties": {
                        "panelEnabled": {
                            "type": "boolean",
                            "description": "Indicates whether the Settings panel is accessible to the users",
                            "default": true
                        },

                        "opacity": {
                            "type": "object",
                            "description": "Specifies the opacity setting for the Feature Layer",

                            "properties": {
                                "enabled": {
                                    "type": "boolean",
                                    "description": "Indicates whether the Opacity control is accessible to the users",
                                    "default": true
                                },
                                "default": {
                                    "id": "#default",
                                    "type": "number",
                                    "description": "Specifies the default opacity level of the Feature Layer",
                                    "minimum": 0,
                                    "maximum": 1,
                                    "default": 1
                                }
                            }
                        },

                        "visible": { "type": "boolean", "default": true },
                        "boundingBoxVisible": { "type": "boolean", "default": false }
                    }
                }
            },

            "required": [ "id", "displayName", "url", "symbology" ]
        },

        "staticNode": {
            "allOf": [
                { "$ref": "#/definitions/basicNode" },
                {
                    "properties": {
                        "isStatic": { "type": "boolean", "enum": [ true ] }
                    },
                    "required": [ "isStatic" ]

                }
            ]


        },

        "featureNode": {
            "allOf": [
                { "$ref": "#/definitions/basicNode" },
                {
                    "type": "object",

                    "properties": {

                        "nameField": { "type": "string" },
                        "layerAttributes": { "type": "string", "default": "*" },

                        "templates": { "type": "object" },
                        "datagrid": {
                            "type": "object",
                            "properties": {
                                "rowsPerPage": { "type": "integer", "minimum": 1, "default": 50 },
                                "gridColumns": { "type": "array", "items": { "$ref": "#/definitions/gridColumn" } }
                            }

                        }

                    },
                    "required": [ "nameField", "datagrid" ]
                }

            ]
        },

        "wmsNode": {
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "displayName": { "type": "string" },
                "url": { "type": "string", "format": "uri" },
                "imageUrl": { "type": "string", "format": "uri" },
                "layerName": { "type": "string" },
                "format": { "type": "string" },
                "legendMimeType": { "type": "string" },

                "settings": {
                    "type": "object",
                    "properties": {
                        "panelEnabled": { "type": "boolean", "default": true },
                        "visible": { "type": "boolean", "default": true },
                        "opacity": {
                            "type": "object",
                            "properties": {
                                "enabled": { "type": "boolean", "default": true },
                                "opacity": { "type": "number", "default": 1, "minimum": 0, "maximum": 1 }
                            }
                        }
                    },
                    "additionalProperties": false
                },

                "featureInfo": {
                    "type": "object",
                    "properties": {
                        "mimeType": { "type": "string" },
                        "parser": { "type": "string" }
                    },
                    "required": [ "mimeType", "parser" ]
                }

            },
            "required": [ "id", "displayName", "url", "layerName", "format" ],
            "additionalProperties": false
        }
    },

    "properties": {

        "version": { "type": "string", "enum": [ "1.0" ] },
        "proxyUrl": { "type": "string" },
        "geometryServiceUrl": { "type": "string" },
        "initialBasemapIndex": { "type": "number", "default": 0 },
        "extendedDatagridExtentFilterEnabled": { "type": "boolean", "default": false },
        "rowsPerPage": { "type": "number", "default": 50 },

        "spatialReference": { "$ref": "#/definitions/spatialReference" },

        "extents": { "type": "object" },
        "navWidget": { "type": "object" },
        "zoomLevels": {
            "type": "object",
            "properties": {
                "min": { "type": "number", "default": 1 },
                "max": { "type": "number", "default": 17 }
            }
        },

        "basemaps": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "url": { "type": "string", "format": "uri" }
                },
                "required": [ "id", "url" ]
            }
        },

        "templates": {
            "type": "object",
            "properties": {
                "basemap": { "type": "string", "default": "default_basemap" },
                "globalSelectorToggles": { "type": "string", "default": "default_selector_toggles" }
            }
        },

        "layers": {
            "type": "object",
            "properties": {
                "feature": {
                    "type": "array",
                    "default": [ ],
                    "items": { "oneOf": [ { "$ref": "#/definitions/featureNode" }, { "$ref": "#/definitions/staticNode" } ] }
                },
                "wms": {
                    "type": "array",
                    "default": [ ],
                    "items": { "$ref": "#/definitions/wmsNode" }
                }
            }
        },
        "plugins": {
            "type": "array",
            "items": { "type": "string" },
            "default": [ ]
        },
        "divNames": {
            "type": "object",
            "properties": {
                "map": { "type": "string", "default": "mainMap" },
                "navigation": { "type": "string", "default": "map-navigation" },
                "filter": { "type": "string", "default": "searchMapSectionBody" },
                "datagrid": { "type": "string", "default": "gridpane" }
            }
        },

        "advancedToolbar": {
            "type": "object",
            "title": "Advanced Toolbar",
            "description": "Specifies tools available for Advanced Toolbar",

            "properties": {

                "enabled": {
                    "type": "boolean",
                    "description": "Specifies if Advanced Toolbar is active",
                    "default": false
                },

                "tools": {
                    "type": "array",
                    "title": "Tools",
                    "description": "",

                    "items": {
                        "type": "object",

                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Name of the tool"
                            },

                            "selector": {
                                "type": "string",
                                "description": "CSS selector for the tool's activator"
                            },

                            "enabled": {
                                "type": "boolean",
                                "description": "Specifies if the tool is active",
                                "default": true
                            }
                        },

                        "required": [
                            "name",
                            "selector",
                            "enabled"
                        ]
                    },
                    "default": [ ]
                }
            }
        }


    },
    "required": [ "version", "spatialReference", "extents", "basemaps" ]
}
